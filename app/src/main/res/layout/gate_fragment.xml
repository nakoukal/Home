<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gate section"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24dp"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="2dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_above="@+id/bt01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp" />

    <Button
        android:id="@+id/bt01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginRight="1dp"
        android:layout_marginTop="2dp"
        android:enabled="false"
        android:text="bt01"
        android:textSize="19dp" />

    <Button
        android:id="@+id/bt02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt05"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:enabled="false"
        android:text="BT02"
        android:textSize="19dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/bt02"
        android:layout_toRightOf="@+id/bt02"
        android:enabled="false"
        android:text="BT03"
        android:textSize="19dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Switch section"
        android:id="@+id/textView2"
        android:textSize="24dp"
        android:theme="@style/AppTheme"
        android:layout_below="@+id/bt03"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_above="@+id/bt04"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:id="@+id/view" />

    <Button
        android:id="@+id/bt04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:enabled="false"
        android:text="BT04"
        android:textSize="19dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/bt04"
        android:layout_toRightOf="@+id/bt04"
        android:enabled="false"
        android:text="BT05"
        android:textSize="19dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/bt02"
        android:enabled="false"
        android:text="BT06"
        android:textSize="19dp" />
</RelativeLayout>